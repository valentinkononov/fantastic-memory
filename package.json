{
    "name": "ts-num-short",
    "version": "1.0.3",
    "description": "Typescript based number shortener",
    "repository": "https://github.com/valentinkononov/ts-num-short",
    "issues": "https://github.com/valentinkononov/ts-num-short/issues",
    "author": "Valentin Kononov, http://kononov.space",
    "keywords": [
        "typescript",
        "number",
        "short",
        "abbreviation"
    ],
    "license": "MIT",
    "files": [
        "dist/src",
        "postinstall.js",
        "index.js"
    ],
    "sideEffects": false,
    "scripts": {
        "prebuild": "rimraf dist",
        "debug": "npx tsc --watch",
        "build": "npx tsc",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint -c ./.eslintrc.js --ext .ts,.js --max-warnings 0 .",
        "lint:fix": "eslint -c ./.eslintrc.js --ext .ts,.js --fix .",
        "test": "jest",
        "test:ci": "npm test",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs": "typedoc --out docs src",
        "compodoc": "npx compodoc -p tsconfig.json -s",
        "coverage": "npm test && opener coverage/lcov-report/index.html",
        "upload-coverage": "codecov",
        "prepublish": "npm run lint && npm run build && npm run test",
        "postinstall": "node postinstall.js",
        "triggerBuild": "git commit --allow-empty -n -m trigger && git push"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,ts,md,less,json}": [
            "prettier --write"
        ],
        "*.{ts, js}": [
            "eslint --fix --quiet"
        ]
    },
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.11",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.20.0",
        "codecov": "^3.8.1",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.1.0",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typedoc": "^0.20.34",
        "typescript": "^4.2.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
